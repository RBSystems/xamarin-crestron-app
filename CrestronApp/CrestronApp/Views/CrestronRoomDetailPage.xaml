<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CrestronApp.Views.CrestronRoomDetailPage"
             Title="{Binding Title}">
    <StackLayout Spacing="20" Padding="15">
        <Label Text="{Binding Room.Name}" FontSize="Medium"/>
        <Label Text="{Binding Room.IpAddress}" FontSize="Small"/>
        <Button Clicked="ConnectToRoom_Clicked" >Connect to this room</Button>
    </StackLayout>
</ContentPage>